{
    "name": "Arxiv.org pdf downloader",
    "version": "0.0.0",
    "description": "Plugin helps to download articles from arxiv.org with human readable file names",
    "icons": { 
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background_page": "background.html",
    "permissions": [
        "http://arxiv.org/abs/*",
        "https://paypal.com/*"
    ],
    "content_scripts": [
        {
            "js": ["jquery.min.js", "script.js"],
            "matches": ["http://arxiv.org/abs/*"]
        }
    ],
    "manifest_version": 2
}
